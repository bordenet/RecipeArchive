# Run linting, security scanning, test file validation, documentation organization, CLAUDE.md review, PRD protection, and Go unit tests (fast checks only)
# Skip validation for the monorepo validation script itself
if [ -f "validate-monorepo.sh" ] && git diff --cached --name-only | grep -q "validate-monorepo.sh"; then
  echo "⚠️  Skipping Husky checks for validate-monorepo.sh (exempted)"
  exit 0
fi

.husky/protect-prds
.husky/check-test-files
npm run security:scan
npm run docs:organize
npm run docs:review
npm run lint
npm run test:go
