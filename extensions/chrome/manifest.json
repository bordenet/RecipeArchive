{
  "manifest_version": 3,
  "name": "RecipeArchive Extension",
  "version": "0.2.0",
  "description": "Capture and archive recipes from the web.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://cognito-idp.us-west-2.amazonaws.com/*",
    "https://4sgexl03l7.execute-api.us-west-2.amazonaws.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["supported-sites.js", "typescript-parser-bundle.js", "content.js"]
    }
  ]
}