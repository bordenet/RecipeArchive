{
  "name": "recipearchive-safari-extension",
  "version": "0.1.0",
  "description": "Safari Web Extension for RecipeArchive - recipe capture and storage",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testMatch='**/*.test.js'",
    "test:integration": "node test-recipe-extraction.js",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "build": "echo 'Safari Web Extension - No build process required'",
    "validate": "echo 'Validating Safari extension structure...'; ls -la *.json *.js *.html *.png"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ]
  },
  "keywords": [
    "safari",
    "web-extension",
    "recipe",
    "food",
    "cooking",
    "archive"
  ],
  "author": "RecipeArchive Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/RecipeArchive.git",
    "directory": "extensions/safari"
  },
  "bugs": {
    "url": "https://github.com/your-username/RecipeArchive/issues"
  },
  "homepage": "https://github.com/your-username/RecipeArchive#readme"
}
