{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "extensions/shared/*"
            ]
        },
        "types": [
            "jest",
            "node",
            "chrome"
        ]
    },
    "include": [
        "shared/**/*.ts",
        "chrome/*.ts",
        "safari/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}