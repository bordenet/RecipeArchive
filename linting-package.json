{
  "scripts": {
    "lint": "eslint --config eslint.config.enhanced.js extensions/*/",
    "lint:basic": "eslint extensions/*/",
    "lint:scoping": "node tools/scoping-validator.cjs",
    "lint:full": "npm run lint && npm run lint:scoping extensions/*/*.js",
    "precommit": "npm run lint:full",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "eslint": "^8.56.0"
  },
  "name": "recipe-archive-linting",
  "version": "1.0.0",
  "description": "Enhanced linting tools for Recipe Archive browser extensions"
}
