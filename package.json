{
  "name": "recipe-archive-monorepo",
  "version": "1.0.0",
  "description": "Cross-device recipe archiving platform with browser extensions, AWS backend, and native apps",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "cd tools && ./bin/recipe-cli test run",
    "test:parsers": "jest --config=config/jest.config.js --testMatch='**/parsers/tests/**/*.test.ts'",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js' --testTimeout=20000",
    "test:coverage": "jest --coverage --testMatch='**/tests/**/*.test.js'",
    "test:go": "cd aws-backend/functions/local-server && go test -v",
    "dev:start": "cd tools && ./bin/recipe-cli dev start",
    "dev:stop": "cd tools && ./bin/recipe-cli dev stop",
    "validate": "cd tools && ./bin/recipe-cli validate env",
    "deploy": "cd tools && ./bin/recipe-cli deploy aws",
    "deploy:staging": "cd tools && ./bin/recipe-cli deploy aws staging",
    "deploy:prod": "cd tools && ./bin/recipe-cli deploy aws prod",
    "lint": "eslint --config tools/linting/eslint.config.browser-extensions.cjs 'extensions/**/*.{js,ts}' --ignore-pattern 'extensions/safari-backup/**' --ignore-pattern '**/eslint.config.js' --max-warnings 150",
    "lint:fix": "eslint --config tools/linting/eslint.config.enhanced-v2.cjs extensions/chrome/ extensions/safari/ tools/ --ignore-pattern 'extensions/safari-backup/**' --ignore-pattern 'tests/**' --ignore-pattern '**/*.test.js' --fix",
    "lint:browser": "eslint --config tools/linting/eslint.config.browser-extensions.cjs extensions/chrome/ extensions/safari/ extensions/shared/ --ignore-pattern 'extensions/safari-backup/**' --max-warnings 0",
    "lint:nodejs": "eslint --config tools/linting/eslint.config.nodejs.cjs tools/ tests/ --max-warnings 0",
    "lint:scoping": "node tools/focused-scoping-validator.cjs extensions/*/*.js",
    "lint:full": "npm run lint && npm run lint:scoping",
    "build:parser-bundle": "node tools/build-parser-bundle.cjs",
    "security:scan": "trufflehog git file://. --since-commit HEAD --only-verified --fail",
    "security:scan-all": "trufflehog git file://. --only-verified --fail",
    "security:clean": "echo 'ðŸš¨ SECURITY VIOLATION DETECTED! Remove all PII/secrets before committing.' && exit 1",
    "docs:review": "node scripts/review-claude-md.js",
    "docs:organize": "node scripts/organize-docs.cjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.4",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "author": "Matt Bordenet",
  "license": "MIT",
  "dependencies": {
    "aws-cdk": "^2.1026.0",
    "aws-cdk-lib": "^2.212.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "playwright-extra": "^4.3.6",
    "playwright-extra-plugin-stealth": "^0.0.1",
    "ts-node": "^10.9.2"
  }
}
